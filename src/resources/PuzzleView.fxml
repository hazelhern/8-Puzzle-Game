<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane fx:controller="Controller.PuzzleController"
           xmlns:fx="http://javafx.com/fxml"
           xmlns="http://javafx.com/javafx"
           prefWidth="600" prefHeight="700">

    <!-- Background image (faded/opaque) -->
    <ImageView fx:id="backgroundImageView"
               fitWidth="400"
               fitHeight="400"
               preserveRatio="true"
               opacity="0.2"
               smooth="true" />

    <!-- Foreground content -->
    <VBox alignment="CENTER" spacing="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Title -->
        <Text text="8 Puzzle Game" style="-fx-font-size: 24px;" />

        <!-- Puzzle Grid (placed directly over the faded background image) -->
        <GridPane fx:id="puzzleGrid"
                  alignment="CENTER"
                  hgap="2" vgap="2"
                  maxWidth="400" maxHeight="400" />
        <ImageView fx:id="fullImageView"
                   fitWidth="400"
                   fitHeight="400"
                   preserveRatio="true"
                   smooth="true" />


        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="uploadButton" text="Upload Image" onAction="#handleUploadImage"/>
            <Button fx:id="shuffleButton" text="Shuffle" onAction="#handleShuffle"/>
            <Button fx:id="solveButton" text="Solve" onAction="#handleSolve"/>
        </HBox>
    </VBox>
</StackPane>
