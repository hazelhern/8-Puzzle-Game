<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<StackPane fx:id="rootPane" prefWidth="600" prefHeight="700"
           fx:controller="Controller.PuzzleController"
           xmlns:fx="http://javafx.com/fxml"
           xmlns="http://javafx.com/javafx">

    <VBox alignment="CENTER" spacing="20">
        <Text text="8 Puzzle Game" style="-fx-font-size: 24px;" />

        <!-- background and puzzle are aligned together -->
        <StackPane alignment="CENTER" maxWidth="360" maxHeight="360">
            <ImageView fx:id="backgroundImageView"
                       fitWidth="360" fitHeight="360"
                       preserveRatio="false"
                       opacity="0.2"/>
            <GridPane fx:id="puzzleGrid"
                      hgap="0" vgap="0"
                      maxWidth="360" maxHeight="360"
                      minWidth="360" minHeight="360"
                      alignment="CENTER"/>
        </StackPane>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="shuffleButton" text="Shuffle" onAction="#handleShuffle" visible="false"/>
            <Button fx:id="uploadButton" text="Upload Image" onAction="#handleUploadImage"/>
            <Button fx:id="solveButton" text="Solve" onAction="#handleSolve" visible="false"/>
        </HBox>

        <!-- Solved Label -->
        <Label fx:id="solvedLabel" text="Solved!" visible="false" style="-fx-font-size: 18px;" />

    </VBox>
</StackPane>
